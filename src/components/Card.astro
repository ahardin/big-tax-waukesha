---
import type { Supervisor } from "../pages/index.astro";

interface Props {
	supervisor: Supervisor;
}

const { supervisor } = Astro.props;
---

<div class="card p-4 w-full md:w-1/4 flex flex-col">
	<h2 class="text-2xl font-bold">
		{supervisor.name}
	</h2>
	<h3>{supervisor.district}</h3>
	<p>Loves to raise taxes: TBD</p>
	<div class="image-container">
		<img
			class="mx-auto h-full"
			src={supervisor.profilePictureUrl}
			alt={supervisor.name}
		/>
	</div>
	<!-- <p>
		{supervisor.committeeAssignment}
	</p> -->
	<a class="underline text-purple-500" href={`mailto:${supervisor.email}`}>
		Email Supervisor
	</a>
</div>
<style>
	.card {
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	.image-container {
		height: 220px; /* Adjust this value as needed */
		width: 100%;
		overflow: hidden;
	}
</style>
